# Токен бота (получить у @BotFather в Telegram)
BOT_TOKEN=your_bot_token_here

# ID администратора (опционально, для уведомлений)
# Узнать свой ID можно у @userinfobot
ADMIN_ID=your_telegram_id

# Режим отладки (True/False)
DEBUG=False

# Путь к SQLite базе (опционально)
# По умолчанию: /data/bot_database.db (для Bothost)
# Для локальной разработки раскомментируйте:
# DATABASE_PATH=database/bot_database.db

# ============================================================
# База данных PostgreSQL (для Bothost или продакшена)
# ============================================================
# Вариант 1: Одна строка подключения (приоритетный)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Вариант 2: Отдельные переменные
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=assist_bot_db
# POSTGRES_USER=assist_bot_user
# POSTGRES_PASSWORD=your_secure_password

# Примечание:
# - Если DATABASE_URL или POSTGRES_* переменные указаны - используется PostgreSQL
# - Если не указаны - используется SQLite (database/bot_database.db)
# - На Bothost PostgreSQL переменные предоставляются автоматически
